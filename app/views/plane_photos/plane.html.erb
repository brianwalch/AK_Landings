<h1>Listing photos for plane <%= @plane.n_number %></h1>

<table>
  <tr>
    <th>Plane image</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plane_photos.each do |plane_photo| %>
  <tr>
    <td><%= image_tag plane_photo.plane_image_url(:thumb).to_s %></td>
    <td><%= plane_photo.description %></td>
    <td><%= link_to 'Details', plane_photo %></td>
    <td><%= link_to 'Edit', edit_plane_photo_path(plane_photo) %></td>
    <td><%= link_to 'Remove', plane_photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a photo of this plane', new_plane_photo_path %>
