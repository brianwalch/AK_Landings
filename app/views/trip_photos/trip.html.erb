<h1>Photos for trip <%= @trip.summary %></h1>

<table>
  <tr>
    <th>Trip image</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trip_photos.each do |trip_photo| %>
  <tr>
    <td><%= image_tag trip_photo.trip_image_url(:thumb).to_s %></td>
    <td><%= trip_photo.description %></td>
    <td><%= link_to 'Details', trip_photo %></td>
    <td><%= link_to 'Edit', edit_trip_photo_path(trip_photo) %></td>
    <td><%= link_to 'Remove', trip_photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Trip Photos', new_trip_photo_path %>
