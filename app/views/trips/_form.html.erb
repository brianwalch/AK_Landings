<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :departure_time %><br />
    <%= f.datetime_select :departure_time %>
  </div>
  <div class="field">
    <%= f.label :arrival_time %><br />
    <%= f.datetime_select :arrival_time %>
  </div>
  <div class="field">
    <%= f.label :departed %><br />
    <%= f.select :departed,Faafacility.find(:all).collect{|p| [p.LocationID]} %>
  </div>
  <div class="field">
    <%= f.label :destination %><br />
    <%= f.select :destination,Faafacility.find(:all).collect{|p| [p.LocationID]} %>
  </div>
  <div class="field">
    <%= f.label "Waypoints (Hold ctrl to select multiple waypoints)"  %><br />
    <%= f.select :waypoints,Faafacility.find(:all).collect{|p| [p.LocationID]},{},{:multiple => true} %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit "Add Trip"%>
  </div>
<% end %>
