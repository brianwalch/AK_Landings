<h1>User Photos</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_photos.each do |user_photo| %>
  <tr>
    
    <td><%= image_tag user_photo.user_image_url(:thumb).to_s %></td>
    <td><%= user_photo.description %></td>
    <td><%= link_to 'Details', user_photo %></td>
    <td><%= link_to 'Edit', edit_user_photo_path(user_photo) %></td>
    <td><%= link_to 'Remove', user_photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_user_photo_path %>
